{
  "extends": [
    "plugin:@wordpress/eslint-plugin/recommended-with-formatting",
    "plugin:jest/recommended"
  ],
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "fetchMock": false,
    "featureFlags": false
  },
  "rules": {
    "sitekit/camelcase-acronyms": "error",
    // "sitekit/jsdoc-third-person": 1,
    // "sitekit/jsdoc-fullstop": 1,
    // "sitekit/jsdoc-requires-since": 1,
    // "sitekit/jsdoc-capitalization": 1,
    // "sitekit/jsdoc-tag-grouping": 1,
    // "sitekit/jsdoc-tag-order": 1,
    "jsdoc/check-tag-names": 2, // Recommended
    "jsdoc/check-types": 2, // Recommended
    "jsdoc/check-line-alignment": 1,
    "jsdoc/require-description": 2,
    "jsdoc/require-description-complete-sentence": 0,
    "jsdoc/require-param": 2, // Recommended
    "jsdoc/require-param-description": 2, // Recommended
    "jsdoc/require-param-name": 2, // Recommended
    "jsdoc/require-param-type": 2, // Recommended
    "jsdoc/require-returns-check": 2,
    "jsdoc/require-returns-description": 2,
    "jsdoc/require-returns-type": 2,
    "jsdoc/require-returns": 0,
    "jsdoc/no-undefined-types": 2,
    "jsdoc/valid-types": 2,
    "no-restricted-globals": [
      "error",
      {
        "name": "window",
        "message": "Use 'global' instead."
      }
    ],
    "react/jsx-fragments": [
      "error",
      "element"
    ],
    "valid-jsdoc": [
      "error",
      {
        "requireReturn": false
      }
    ],
    "@wordpress/i18n-text-domain": [
      "error",
      {
        "allowedTextDomain": "google-site-kit"
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "tests/e2e/**/*.js"
      ],
      "env": {
        "browser": true
      },
      "globals": {
        "browser": true,
        "page": true
      },
      "rules": {
        "no-restricted-globals": [
          "off"
        ]
      }
    },
    {
      "files": [
        "**/modules/*/components/**/*.js",
        "assets/js/googlesitekit/*/components/**/*.js"
      ],
      "rules": {
        "filenames/match-exported": [
          2,
          "[A-Z]([A-Z0-9]*[a-z][a-z0-9]*[A-Z]|[a-z0-9]*[A-Z][A-Z0-9]*[a-z])[A-Za-z0-9]*"
        ]
      }
    }
  ],
  "plugins": [
    "filenames",
    "sitekit",
    "jsdoc"
  ]
}
